      <option name="COMMAND" value="/usr/bin/coffee" />
      <option name="PARAMETERS" value="-w -c $FilePath$" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
</toolSet>